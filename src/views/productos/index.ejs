<!DOCTYPE html>
<html lang="es">
  <%- include("../partials/head.ejs",{title:"inicio"})%>
<body>
    
  <%- include("../partials/header.ejs")%>
   
        <nav>
            <ul>
                <li><a href="#">Inicio</a></li>
                <li><a href="#">Ofertas</a></li>
                <li><a href="#">Registro</a></li>
                <li><a href="#">Login</a></li>
            </ul>
        </nav>

        <main class="productos">
          <% productos.forEach(producto => { %>
         
              <div class="producto">
                <a class="ancla-index" href="/detail/<%= producto.id %>">
                  <img class="producto imagen1" src="/img/imagen_llegada/<%= producto.image %>" alt="">
                </a>
                <h3 class="nombrePerfume"><%= producto.nombre %></h3>
                <p class="linea-roja">precio: $<%= producto.precio %></p>
                <p>descuento: <%= producto.descuento %> %</p>
                <p>precio Final: $<%= ((100 - producto.descuento) / 100) * producto.precio %></p>
              </div>
            <% }) %>
          
          
          </main>
          
          <%- include("../partials/footer.ejs")%>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" 
    crossorigin="anonymous"></script>
</body>
</html>